  {% for rank,mem in app.clanmem %}
      <tr>
        <td>{{ rank }}</td>
        <td><span class="fa-stack fa-1x">
            <i class="fa fa-certificate fa-stack-2x text-primary"></i>
              <strong class="fa-stack-1x certificate-text center-text">{{ mem.level }}</strong>
              </span>
