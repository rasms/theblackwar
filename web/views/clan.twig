{% extends "layout.html" %}

{% block content %}

<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h1>Clan</h1>

<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th>#</th><th>Level</th><th>League</th><th>Name</th><th>Role</th><th>Trophies</th><th>Donations</th><th>Donations Received</th><th>Ratio</th></tr>
  </thead>
  <tbody>


{% for rank,mem in app.clanmem %}
    <tr>
      <td>{{ rank }}</td>
      <td>{{ mem.level }}</td>
      <td><img src="{{ mem.leagueicontn }}" alt="{{ mem.leaguename }}"/></td>
      <td>{{ mem.name }}</td>
      <td>{{ mem.role }}</td>
      <td>{{ mem.trophies }}</td>
      <td>{{ mem.donations }}</td>
      <td>{{ mem.received }}</td>
      <td>{{ mem.ratio }}</td>
    </tr>
{% endfor %}
  </tbody>
</table>

    </div>

  </div> <!-- row -->

</div>

{% endblock %}
